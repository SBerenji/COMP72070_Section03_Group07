                    <Image Source="/Images/dropdown.jpg" DockPanel.Dock="Left" Width="15" Height="13" />

                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </Button.Resources>
